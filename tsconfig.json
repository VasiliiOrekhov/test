//whynot config
{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "alwaysStrict": true, // involves adding the line "use strict" to every compiled file.
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "declaration": false,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "dom", "dom.iterable", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "store/*": ["store/*"],
      "assets/*": ["assets/*"],
      "utils/*": ["utils/*"],
      "constants/*": ["constants/*"],
      "containers/*": ["containers/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
